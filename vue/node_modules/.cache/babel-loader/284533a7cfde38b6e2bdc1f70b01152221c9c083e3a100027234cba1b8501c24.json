{"ast":null,"code":"import request from \"@/utils/request\";\nimport Cookies from \"js-cookie\";\nexport default {\n  name: 'BookList',\n  data() {\n    return {\n      admin: Cookies.get('admn') ? JSON.parse(Cookies.get('admin')) : {},\n      tableData: [],\n      total: 0,\n      params: {\n        pageNumber: 1,\n        pageSize: 10,\n        name: '',\n        book_id: ''\n      }\n    };\n  },\n  created() {\n    this.load();\n  },\n  methods: {\n    load() {\n      // fetch('http://localhost:9090/user/list').then(res=>res.json()).then(res=>{\n      //     console.log(res)\n      //     this.tableData=res\n      // })\n      request.get('/book/page', {\n        params: this.params\n      }).then(res => {\n        if (res.code == '200') {\n          this.tableData = res.data.list;\n          this.total = res.data.total;\n        }\n      });\n    },\n    reset() {\n      this.params = {\n        pageNumber: 1,\n        pageSize: 10,\n        name: '',\n        book_id: ''\n      };\n      this.load();\n    },\n    del(id) {\n      request.delete(\"/book/delete/\" + id).then(res => {\n        if (res.code == '200') {\n          this.$notify.success(\"删除成功\");\n          this.load();\n        } else this.$notify.error(res.msg);\n      });\n    },\n    //点击切换分页\n    handleCurrentChanged(pageNumber) {\n      this.params.pageNumber = pageNumber;\n      this.load();\n    }\n  }\n};","map":{"version":3,"names":["request","Cookies","name","data","admin","get","JSON","parse","tableData","total","params","pageNumber","pageSize","book_id","created","load","methods","then","res","code","list","reset","del","id","delete","$notify","success","error","msg","handleCurrentChanged"],"sources":["src/views/book/List.vue"],"sourcesContent":["<template>\r\n    <div>\r\n        <!--      搜索表单-->\r\n        <div style=\"margin-bottom: 35px;margin-top: 30px\">\r\n            <el-input style=\"width:240px\" placeholder=\"请输入书名\" v-model=\"params.name\"> </el-input>\r\n            <el-input style=\"width:240px;margin-left:5px\" placeholder=\"请输入图书编号\" v-model=\"params.book_no\"> </el-input>\r\n            <el-button style=\"margin-left:5px\" type=\"primary\"@click=\"load\"><i class=\"el-icon-search\"></i> 搜索</el-button>\r\n            <el-button style=\"margin-left:5px\" type=\"warning\"@click=\"reset\"><i class=\"el-icon-refresh\"></i> 重置</el-button>\r\n        </div>\r\n\r\n\r\n        <el-table :data=\"tableData\" stripe>\r\n            <el-table-column prop=\"id\" label=\"编号\" width=\"50\"></el-table-column>\r\n            <el-table-column prop=\"cover\" label=\"封面\">\r\n                <template v-slot=\"scope\">\r\n                    <el-image :src=\"scope.row.cover\" :preview-src-list=\"[scope.row.cover]\"></el-image>\r\n                </template>\r\n            </el-table-column>\r\n            <el-table-column prop=\"name\" label=\"书名\"></el-table-column>\r\n            <el-table-column prop=\"author\" label=\"作者\" width=\"80\"></el-table-column>\r\n            <el-table-column prop=\"publisher\" label=\"出版商\" width=\"70\"></el-table-column>\r\n            <el-table-column prop=\"publish_date\" label=\"出版日期\" width=\"70\"></el-table-column>\r\n            <el-table-column prop=\"book_no\" label=\"图书编号\"></el-table-column>\r\n            <el-table-column prop=\"category\" label=\"分类\"></el-table-column>\r\n            <el-table-column prop=\"description\" label=\"内容简介\" width=\"200\"></el-table-column>\r\n\r\n\r\n            <el-table-column  label=\"操作\" width=\"230px\">\r\n                <template v-slot=\"scope\">\r\n<!--                    scope.row 就是当前行数据-->\r\n                    <div style=\"display: flex\">\r\n                    <el-button  type=\"primary\" @click=\"$router.push('/editBook?id='+scope.row.id)\">编辑</el-button>\r\n                    <el-popconfirm\r\n                            style=\"margin-left: 14px;\"\r\n                            confirm-button-text='YES'\r\n                            cancel-button-text='NO'\r\n                            icon=\"el-icon-info\"\r\n                            title=\"是否确定删除该行数据\"\r\n                            @confirm=\"del(scope.row.id)\"\r\n                    >\r\n                    <el-button  type=\"danger\" slot=\"reference\">删除</el-button>\r\n                    </el-popconfirm>\r\n                    </div>\r\n                </template>\r\n            </el-table-column>\r\n\r\n        </el-table>\r\n        <!--      分页-->\r\n        <div style=\"margin-top: 20px\">\r\n            <el-pagination\r\n                    background\r\n                    :current=\"params.pageNumber\"\r\n                    :page-size=\"params.pageSize\"\r\n                    layout=\"prev, pager, next\"\r\n                    @current-change=\"handleCurrentChanged\"\r\n                    :total=\"total\">\r\n            </el-pagination>\r\n        </div>\r\n    </div>\r\n</template>\r\n\r\n<script>\r\n\r\nimport request from \"@/utils/request\";\r\nimport Cookies from \"js-cookie\";\r\n\r\nexport default {\r\n    name: 'BookList',\r\n    data(){\r\n        return {\r\n            admin: Cookies.get('admn') ? JSON.parse(Cookies.get('admin')) : {},\r\n            tableData: [],\r\n            total:0,\r\n            params:{\r\n                pageNumber:1,\r\n                pageSize:10,\r\n                name:'',\r\n                book_id:''\r\n            }\r\n        }\r\n    },\r\n    created() {\r\n        this.load()\r\n    },\r\n    methods:{\r\n        load(){\r\n            // fetch('http://localhost:9090/user/list').then(res=>res.json()).then(res=>{\r\n            //     console.log(res)\r\n            //     this.tableData=res\r\n            // })\r\n            request.get('/book/page',{\r\n                params: this.params\r\n            }).then(res=>{\r\n                if(res.code=='200') {\r\n                    this.tableData = res.data.list\r\n                    this.total = res.data.total\r\n                }\r\n            })\r\n        },\r\n        reset(){\r\n            this.params = {\r\n                pageNumber:1,\r\n                pageSize:10,\r\n                name:'',\r\n                book_id:''\r\n            }\r\n            this.load()\r\n        },\r\n        del(id){\r\n            request.delete(\"/book/delete/\"+id).then(res=>{\r\n                if(res.code=='200') {\r\n                    this.$notify.success(\"删除成功\")\r\n                    this.load()\r\n                }\r\n                else\r\n                    this.$notify.error(res.msg)\r\n            });\r\n\r\n        },\r\n        //点击切换分页\r\n        handleCurrentChanged(pageNumber){\r\n            this.params.pageNumber=pageNumber\r\n            this.load()\r\n        }\r\n    }\r\n}\r\n</script>\r\n"],"mappings":"AA+DA,OAAAA,OAAA;AACA,OAAAC,OAAA;AAEA;EACAC,IAAA;EACAC,KAAA;IACA;MACAC,KAAA,EAAAH,OAAA,CAAAI,GAAA,WAAAC,IAAA,CAAAC,KAAA,CAAAN,OAAA,CAAAI,GAAA;MACAG,SAAA;MACAC,KAAA;MACAC,MAAA;QACAC,UAAA;QACAC,QAAA;QACAV,IAAA;QACAW,OAAA;MACA;IACA;EACA;EACAC,QAAA;IACA,KAAAC,IAAA;EACA;EACAC,OAAA;IACAD,KAAA;MACA;MACA;MACA;MACA;MACAf,OAAA,CAAAK,GAAA;QACAK,MAAA,OAAAA;MACA,GAAAO,IAAA,CAAAC,GAAA;QACA,IAAAA,GAAA,CAAAC,IAAA;UACA,KAAAX,SAAA,GAAAU,GAAA,CAAAf,IAAA,CAAAiB,IAAA;UACA,KAAAX,KAAA,GAAAS,GAAA,CAAAf,IAAA,CAAAM,KAAA;QACA;MACA;IACA;IACAY,MAAA;MACA,KAAAX,MAAA;QACAC,UAAA;QACAC,QAAA;QACAV,IAAA;QACAW,OAAA;MACA;MACA,KAAAE,IAAA;IACA;IACAO,IAAAC,EAAA;MACAvB,OAAA,CAAAwB,MAAA,mBAAAD,EAAA,EAAAN,IAAA,CAAAC,GAAA;QACA,IAAAA,GAAA,CAAAC,IAAA;UACA,KAAAM,OAAA,CAAAC,OAAA;UACA,KAAAX,IAAA;QACA,OAEA,KAAAU,OAAA,CAAAE,KAAA,CAAAT,GAAA,CAAAU,GAAA;MACA;IAEA;IACA;IACAC,qBAAAlB,UAAA;MACA,KAAAD,MAAA,CAAAC,UAAA,GAAAA,UAAA;MACA,KAAAI,IAAA;IACA;EACA;AACA","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}